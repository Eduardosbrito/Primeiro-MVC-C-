@model ContatoModel
@{
    ViewData["Title"] = "Apagar contato confirmação";
}

<div class="text-center" >
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>

</div>
<br />
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a role="button" class="btn btn-outline-danger" asp-controller="Contato" asp-action="Index">Não</a>
    <a role="button" class="btn btn-outline-success" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar">Sim</a>
</div>