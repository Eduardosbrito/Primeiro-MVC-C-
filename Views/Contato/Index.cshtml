@model List<ContatoModel>
@{
    ViewData["Title"] = "listagem de Contatos";
}
<div class="text-center">

    <div class="alert alert-success" role="alert">
        A simple success alert—check it out!
    </div>

    <div class="alert alert-danger" role="alert">
        A simple danger alert—check it out!
    </div>

    <h1>Listagem de Contatos</h1>
    <br />
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col">
                   <a role="button" class="btn btn-outline-success" asp-asp-controller="Contato" asp-action="Novo" >Novo Contato</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@contato.Id"  asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
